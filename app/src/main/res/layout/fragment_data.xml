<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makaroff Optics -"
        android:textAlignment="center"
        android:textColor="#100F0F"
        android:textSize="42sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="небольшая сеть салонов оптики в Москве. Помогаем заботиться о своем зрении и классно выглядеть. Стремимся сделать мир оптики понятным каждому."
        android:textAlignment="center"
        android:textSize="12sp"
        android:typeface="normal" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:src="@drawable/screenshot_2024_04_04_at_19_32_21" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="#F6F5EE">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="147dp"
            android:layout_height="135dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/photo_2022_05_07_05_30_13"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="137dp"
            android:layout_height="135dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/makaroff_optics_30102021_0005"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="14dp"
            android:text="Женские оправы"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="34dp"
            android:text="Мужские оправы"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/large_albina_4818"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="103dp"
            android:layout_height="75dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="19dp"
            android:src="@drawable/large_albina_5034"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="117dp"
            android:layout_height="62dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/large___51_100"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Много оправ. Более 500 моделей в каждом салоне. Вы точно найдете свою.  • Своя мастерская. Изготавливаем очки в собственной мастерской за 2-5 дней и даём на них расширенную гарантию 1 год.  • Салоны оснащены кабинетом оптометриста с компьютерной диагностикой. Мы проверяем зрение по международным стандартам.  • Никаких скрытых платежей. Работа мастера, футляр, салфетка в комплекте к каждому заказу. Вы платите только за оправу и линзы.  • Лучшие линзы. Устанавливаем качественную оптику Hoya, Essilor, Shamir. Подберем оптимальные линзы под Ваш запрос.  Присылайте рецепт и мы поможем с выбором линз!"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
